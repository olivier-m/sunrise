@require "../base/functions"
@require "../base/extends"

@require "./config"
@require "./extends"
@require "./functions"

// Common selectors
// ============================================================================
$input_widgets = "
    input[type=text],
    input[type=search],
    input[type=tel],
    input[type=url],
    input[type=email],
    input[type=password],
    input[type=datetime],
    input[type=datetime-local],
    input[type=date],
    input[type=month],
    input[type=week],
    input[type=time],
    input[type=number],
    input[type=color],
    textarea,
    select
"

// Base form tags
// ============================================================================
form, fieldset
    min-width 0

fieldset
    border 0
    padding 0
    flow_block()

    @-moz-document url-prefix()
        &
            display table-cell

legend
    border 0
    padding 0
    font-weight bold

label
    display inline-block
    max-width 100%
    margin 0

    &[for]
        cursor pointer


{$input_widgets}
    @extend $base_input

select
    appearance none
    padding-top 3px
    display inline-block
    padding-right 2em
    height auto
    max-width 100%
    background-image embedurl("./arrow_down.svg", "utf-8")
    background-position right center
    background-repeat no-repeat
    box-shadow none

    &, &:focus
        background-color $color_select_bg

body select option
    padding 0 5px

input[type=search]
    -webkit-appearance textfield

input[type=radio]
input[type=checkbox]
    width auto
    border 0
    vertical-align middle
    position relative
    bottom 2px
    line-height 1

input[type=file]
    margin-top .7rem
    line-height normal

input[type="range"]
    -webkit-appearance none
    margin 0

    +range_slider_track()
        width 100%
        height .4rem
        cursor pointer
        background $color_range_track
        border 0

    +range_slider_thumb(-.6rem)
        border 0
        height 1.6rem
        width 1.6rem
        border-radius 1em
        background $color_range_thumb
        cursor pointer


textarea
    overflow auto
    resize vertical
    line-height $line_height

// Placeholders
input::placeholder
textarea::placeholder
    opacity 1
    color $color_input_placeholder

// Disabled fields
html input[disabled]
html textarea[disabled]
html select[disabled]
    @extend $disabled

{$input_widgets}
    &[disabled]
        background-color $color_input_disabled_bg
        color $color_input_disabled_fg

// Webkit adjustments
+media_webkit()
    input[type=radio]
        bottom 3px

    input[type=checkbox]
        bottom 1px

    select
        padding-top 5px
