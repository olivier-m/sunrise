.input-group
    display inline-table
    vertical-align middle

    / html & > *
        display table-cell
        border-right-width 0
        border-radius 0
        margin 0

    & > *:first-child
        border-radius 3px 0 0 3px

    & > *:last-child
        border-right-width 1px
        border-radius 0 3px 3px 0

    & > .group-addon
        padding-left 7px
        padding-right 7px

    & > .group-addon
    & > .button
        border 1px solid darken(btn_default_bg1, 10%)
        border-right-width 0
