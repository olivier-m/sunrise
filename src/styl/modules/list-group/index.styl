.list-group
    flow_block()
    padding-left 0

    & > *
        position relative
        display block
        padding unit(line_height/2, 'em') unit(line_height/2, 'em')
        padding 'calc(%s - .5px)' % @padding
        margin-bottom -1px
        background-color #fff
        border 1px solid color_gray_light

        &:first-child
            border-top-left-radius 3px
            border-top-right-radius 3px

        &:last-child
            border-bottom-left-radius 3px
            border-bottom-right-radius 3px

    & > a
        &:hover, &:focus
            color color_link
            background-color color_gray_lighter
